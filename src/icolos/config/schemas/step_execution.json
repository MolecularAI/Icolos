{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Step - execution block",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "prefix_execution": {
            "type": "string"
        },
        "binary_location": {
            "type": "string"
        },
        "platform": {
            "type": "string"
        },
        "resources": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "partition": {},
                "gres": {},
                "modules": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "cores": {},
                "time": {},
                "tasks": {},
                "mem": {},
                "other_args": {},
				"additional_lines": {
					"type": "array",
                    "items": {
                        "type": "string"
                    }
				}
            }
        },
        "parallelization": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "cores": {
                    "type": "number"
                },
                "max_length_sublists": {
                    "type": "number"
                }
            }
        },
        "failure_policy": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "n_tries": {
                    "type": "number"
                }
            }
        }
    }
}
