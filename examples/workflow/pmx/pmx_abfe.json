				"type": "pmx_abfe_setup",
				"execution": {
					"prefix_execution": "module load GROMACS/2021-fosscuda-2019a-PLUMED-2.7.1-Python-3.7.2",
					"parallelization": {
						"jobs": 8
					},
					"failure_policy": {
						"n_tries": 10
					}
				},
				"settings": {
					"arguments": {
						"parameters": {}
					},
					"additional": {
						"sim_types": [
							"em",
							"nvt",
							"npt",
							"eq",
							"transitions"
						],
						"water":"tip3p",
						"replicas": 1,
						"forcefield": "amber99sb-star-ildn-mut"
					}
				},
				"input": {
					"compounds": [
						{
							"source": "{file_path}/ligands_subset.sdf",
							"source_type": "file",
							"format": "SDF"
						}
					],
					"generic": [
						{
							"source": "{file_path}/abfe/mdp/",
							"extension": "mdp"
						},
						{
							"source": "{file_path}/5tbm.pdb",
							"extension": "pdb"
						}
					],
					"work_dir": "{output_dir}"
				}
			},
			{
				"step_id": "prepare_em",
				"type": "pmx_prepare_simulations",
				"execution": {
